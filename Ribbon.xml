<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="OnRibbonLoad">
    <ribbon>
        <tabs>
            <tab id="tabTeXShift" label="TeXShift">
                <group id="grpConvertTools" label="转换工具">
                    <button id="btnSilentConvert"
                            label="一键转换"
                            size="large"
                            onAction="OnConvertButtonClick"
                            imageMso="Repeat" />
                </group>
                <group id="grpDebugTools" label="调试工具" getVisible="GetDebugGroupVisible">
                    <button id="btnDebugConvert"
                            label="调试转换"
                            size="large"
                            onAction="OnDebugConvertButtonClick"
                            imageMso="ScriptDebugger" />
                    <button id="btnDebugXml"
                            label="保存整页XML"
                            size="large"
                            onAction="OnDebugXmlButtonClick"
                            imageMso="SaveSelectionToTableOfContentsGallery" />
                    <button id="btnDebugSelectionXml"
                            label="保存选中XML"
                            size="large"
                            onAction="OnDebugSelectionXmlButtonClick"
                            imageMso="SaveSelectionToHeaderGallery" />
                </group>
                <group id="grpSettings" label="设置">
                    <button id="btnSettings"
                            label="设置"
                            size="large"
                            onAction="OnSettingsButtonClick"
                            imageMso="ComAddInsDialog" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>
