<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="OnRibbonLoad">
    <ribbon>
        <tabs>
            <tab id="tabTeXShift" label="TeXShift">
                <group id="grpConvertTools" label="转换工具">
                    <button id="btnSilentConvert"
                            label="一键转换"
                            size="large"
                            onAction="OnConvertButtonClick"
                            imageMso="Repeat" />
                    <button id="btnDebugConvert"
                            label="调试转换"
                            size="large"
                            onAction="OnDebugConvertButtonClick"
                            imageMso="HappyFace" />
                </group>
                <group id="grpDebugTools" label="调试工具">
                    <button id="btnDebugXml"
                            label="查看整页XML"
                            size="large"
                            onAction="OnDebugXmlButtonClick"
                            imageMso="FileOpen" />
                    <button id="btnDebugSelectionXml"
                            label="查看选中XML"
                            size="large"
                            onAction="OnDebugSelectionXmlButtonClick"
                            imageMso="FileFind" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>